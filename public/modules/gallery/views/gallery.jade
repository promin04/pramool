.slideshow-container
  .mySlides.no-animate(ng-repeat='(key1, value1) in pic')
    //.numbertext {{value1.order}} / {{lengthPage()}}
    img.gallery.middle.fadepic(ng-src='{{value1.link}}')
    //.text Caption Text

  a.prev(ng-click='plusSlides(-1)') ❮
  a.next(ng-click='plusSlides(1)') ❯

.slideshow-sample(style='text-align:center')
  img.dot(ng-src='{{value2.link}}',style='width:25%',height='auto' , ng-click='currentSlide(value2.order-1)' , ng-repeat='(key2,value2) in pic')
